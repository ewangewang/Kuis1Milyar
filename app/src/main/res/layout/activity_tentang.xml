<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tentang"
    android:background="@drawable/tentang"
    android:padding="16dp">
    <LinearLayout
        android:id="@+id/lltentang"
        android:background="#e1f5fe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">
        <TextView
            android:textColor="#0288d1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Aplikasi ini dibuat dengan tujuan menambah\nwawasan dan pengetahuan. Aplikasi ini \ngratis dan dapat dimainkan di semua \nkalangan usia. Segala bentuk virtual yang \nada didalam aplikasi ini dibuat untuk tujuan pembelajaran. Uang yang terdapat dalam aplikasi ini tidak dapat diambil.Uang \ntersebut dibuat hanya sebagai target\nagar semakin terpacu untuk belajar dan\nmenambah wawasan.\n\nUntuk Saran dan Dukungan dapat\nmenghubungi kontak dibawah ini.\nLine : ewangewang\nInstagram : @rewangewang\n\nCATATAN : Jika ingin bermain tanpa iklan\nmatikan koneksi internet.Tetapi jikia ingin\nsupport publisher hidupkan koneksi internet."/>
    </LinearLayout>
    <Button
        android:id="@+id/kembali"
        android:layout_above="@+id/adView"
        android:background="#2962ff"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:text="Kembali"
        />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>